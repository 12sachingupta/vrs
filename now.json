{
  "version": 2,
  "name": "vrs",
  "alias": "serverless-vrs",
  "public": false,
  "builds": [
    { "src": "backend/**/*.js", "use": "@now/node" },
    {
      "src": "frontend/package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/$1",
      "headers": {
        "cache-control": "s-maxage=31536000, maxage=0, stale-while-revalidate=31536000, stale-if-error=31536000"
      }
    },
    {
      "src": "/auth/(.*)",
      "dest": "backend/auth/$1",
      "headers": {
        "cache-control": "s-maxage=31536000, maxage=0, stale-while-revalidate=31536000, stale-if-error=31536000"
      }
    },
    {
      "src": "/backend/(.*)",
      "dest": "backend/$1",
      "headers": {
        "cache-control": "s-maxage=31536000, maxage=0, stale-while-revalidate=31536000, stale-if-error=31536000"
      }
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1",
      "headers": {
        "cache-control": "s-maxage=31536000, maxage=0, stale-while-revalidate=31536000, stale-if-error=31536000"
      }
    }
  ],
  "env": {
    "COOK_KEY": "@vrs-cook-key",
    "GITHUB_CLIENT_ID": "@vrs-github-client-id",
    "GITHUB_CLIENT_SECRET": "@vrs-github-client-secret",
    "MONGODB_ATLAS_URI": "@vrs-mongodb-atlas-uri"
  }
}
